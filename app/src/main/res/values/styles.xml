<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/amber</item>
    </style>

    <style name="TextViewAppearance.Headline2" parent="@style/TextViewAppearance">
        <item name="typeface">robotoLight</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/global_color_primary_light</item>
    </style>
    <style name="ToolBarTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>

        <item name="popupTheme">@style/Theme.AppCompat.Light</item>
    </style>
    <style name="images" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textStyle">normal</item>
        <item name="android:backgroundTint">@color/primary_darkGrey</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:layout_marginLeft">4dp</item>

    </style>

    <style name="Textinput" >
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:minHeight">60dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/icons</item>

    </style>
    <style name="edittext" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:imeOptions">actionNext</item>


    </style>
    <style name="detail" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16dp</item>
        <item name="android:padding">6dp</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/primarygrey</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Small</item>


    </style>
    <style name="TextViewAppearance" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="typeface">robotoRegular</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">26dp</item>
        <item name="android:paddingRight">26dp</item>
        <!-- Supports API Level 17+ -->
        <!-- <item name="android:paddingStart">26dp</item> -->
        <!-- Supports API Level 17+ -->
        <!-- <item name="android:paddingEnd">26dp</item> -->
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
