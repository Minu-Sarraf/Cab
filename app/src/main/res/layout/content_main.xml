<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_lightGrey"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:clipToPadding="false"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/primary_lightGrey"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"

                android:text="Location"
                android:textColor="@color/primary_darkGrey"
                android:textSize="14sp" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                app:cardBackgroundColor="@color/icons"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/icons"
                    android:padding="5dp">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/fromwrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="60dp"
                        android:layout_toRightOf="@+id/fromicon"
                        android:background="@color/icons"
                        android:gravity="center">

                        <EditText
                            android:id="@+id/form"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_toLeftOf="@+id/map"
                            android:hint="From"
                            android:imeOptions="actionNext"
                            android:paddingLeft="5dp"
                            android:textSize="14sp" />

                    </android.support.design.widget.TextInputLayout>

                    <ImageButton
                        android:id="@+id/map"
                        android:layout_width="40dp"
                        android:layout_height="38dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/ic_place"
                        android:backgroundTint="@color/accent"

                        />

                    <ImageButton
                        android:id="@+id/mapfrom"
                        android:layout_width="40dp"
                        android:layout_height="38dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="16dp"
                        android:background="@drawable/ic_action_location"
                        android:paddingBottom="16dp"
                        android:backgroundTint="@color/accent"

                        />

                    <ImageView
                        android:id="@+id/fromicon"
                        style="@style/images"
                        android:background="@drawable/ic_action_exit" />

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/wrapperto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/fromwrapper"
                        android:layout_marginRight="60dp"
                        android:layout_toRightOf="@+id/toicon"
                        android:background="@color/icons"
                        android:gravity="center">

                        <EditText
                            android:id="@+id/to"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:hint="To"
                            android:imeOptions="actionNext"
                            android:paddingLeft="5dp"
                            android:textSize="14sp" />
                    </android.support.design.widget.TextInputLayout>

                    <ImageView
                        android:id="@+id/toicon"
                        style="@style/images"
                        android:layout_below="@+id/fromicon"
                        android:layout_marginTop="35dp"
                        android:background="@drawable/ic_action_exit"
                        android:rotation="180" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"

                android:text="Customer Info"
                android:textColor="@color/primary_darkGrey"
                android:textSize="14sp" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/icons"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/fade"
                    android:padding="5dp">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/userfromwrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="60dp"
                        android:layout_toRightOf="@+id/userfromicon"
                        android:background="@color/icons"
                        android:gravity="center">

                        <EditText
                            android:id="@+id/userform"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_toLeftOf="@+id/contact_picker"
                            android:hint="Customer Name"
                            android:imeOptions="actionNext"
                            android:inputType="textCapWords|textCapSentences"
                            android:paddingLeft="5dp"
                            android:textSize="14sp" />

                    </android.support.design.widget.TextInputLayout>

                    <ImageView
                        android:id="@+id/userfromicon"
                        style="@style/images"
                        android:background="@drawable/ic_action_user" />

                    <ImageButton
                        android:id="@+id/contact_picker"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginBottom="16dp"
                        android:backgroundTint="@color/accent"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/ic_action_contact"

                        />

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/mailwrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/userfromwrapper"
                        android:layout_marginRight="60dp"
                        android:layout_toRightOf="@+id/usericon"
                        android:background="@color/icons"
                        android:gravity="center">

                        <EditText
                            android:id="@+id/usermail"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:hint="Email"
                            android:imeOptions="actionNext"
                            android:paddingLeft="5dp"
                            android:textSize="14sp" />
                    </android.support.design.widget.TextInputLayout>

                    <ImageView
                        android:id="@+id/usericon"
                        style="@style/images"
                        android:layout_below="@+id/userfromicon"
                        android:layout_marginTop="30dp"

                        android:background="@drawable/ic_action_mail" />


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/phwrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/mailwrapper"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="60dp"
                        android:layout_toRightOf="@+id/phicon"
                        android:background="@color/icons"
                        android:gravity="center"
                        app:counterEnabled="false"
                        app:counterMaxLength="13"
                        app:counterOverflowTextAppearance="@style/counterOverride"
                        app:counterTextAppearance="@style/counterText">

                        <EditText
                            android:id="@+id/phone"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:hint="Phone No."
                            android:imeOptions="actionNext"

                            android:inputType="number"
                            android:paddingLeft="5dp"
                            android:textSize="14sp" />

                    </android.support.design.widget.TextInputLayout>

                    <ImageView
                        android:id="@+id/phicon"
                        style="@style/images"
                        android:layout_alignStart="@+id/usericon"
                        android:layout_alignTop="@+id/phwrapper"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/ic_local_phone" />
                    <!-- <ImageButton
                         android:id="@+id/phone_picker"
                         android:layout_width="34dp"
                         android:layout_height="34dp"
                         android:layout_alignParentBottom="true"
                         android:layout_alignParentEnd="true"
                         android:layout_alignParentRight="true"
                         android:layout_marginBottom="16dp"
                         android:background="@drawable/ic_action_contact"

                         />-->
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"

                android:text="Other Info"
                android:textColor="@color/primary_darkGrey"
                android:textSize="14sp" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:cardBackgroundColor="@color/icons"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="@color/icons"

                    android:padding="5dp">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/timefromwrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:layout_toRightOf="@+id/timefromicon"
                        android:background="@color/icons"
                        android:gravity="center">

                        <EditText
                            android:id="@+id/timeform"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:hint="Pick up DateTime"
                            android:imeOptions="actionNext"
                            android:inputType="datetime"
                            android:paddingLeft="5dp"
                            android:textSize="14sp" />

                    </android.support.design.widget.TextInputLayout>

                    <ImageView
                        android:id="@+id/timefromicon"
                        style="@style/images"
                        android:background="@drawable/ic_action_calendar_day" />


                    <ImageView
                        android:id="@+id/pickicon"
                        style="@style/images"
                        android:layout_below="@+id/timefromicon"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/ic_confirmation_number" />

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/pasenger"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="60dp"
                        android:layout_below="@+id/timefromwrapper"
                        android:layout_toRightOf="@+id/pickicon"
                        android:background="@color/icons"
                        android:gravity="center">

                        <EditText
                            android:id="@+id/timeto"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignStart="@+id/timefromwrapper"
                            android:hint="No.of Paasenger"

                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:paddingLeft="10dp"
                            android:textSize="14sp" />
                    </android.support.design.widget.TextInputLayout>


                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:layout_gravity="bottom"
                android:background="@color/primary_lightGrey"></View>
        </LinearLayout>

    </ScrollView>
</FrameLayout>